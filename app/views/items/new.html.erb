<h1>New Item</h1>

<%= form_with model: @item, local:true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.attachment_field :image %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %>

  <h4>Type</h4>
  <%= f.select :type, options_for_select(Type.all.pluck("name_#{I18n.locale}, id"), @item.type_id), { include_blank: '-- 選択してください --'} %>

  <h4>Color</h4>
  <%= f.select :color, options_for_select(Color.all.pluck("name_#{I18n.locale}, id"), @item.color_id), { include_blank: '-- 選択してください --'} %>

  <h4>Pattern</h4>
  <%= f.select :pattern, options_for_select(Pattern.all.pluck("name_#{I18n.locale}, id"), @item.pattern_id), { include_blank: '-- 選択してください --'} %>

  <h4>Season</h4>
  <%= f.select :season, options_for_select(Season.all.pluck("name_#{I18n.locale}, id"), @item.season_id), { include_blank: '-- 選択してください --'} %>

  <%#= f.check_box :season, {}, "spring", "" %>
  <%#= f.label :season, Item.seasons_i18n[:spring] %>
  <%#= f.check_box :season, {}, "summer", "" %>
  <%#= f.label :season, Item.seasons_i18n[:summer] %>
  <%#= f.check_box :season, {}, "autumn", "" %>
  <%#= f.label :season, Item.seasons_i18n[:autumn] %>
  <%#= f.check_box :season, {}, "winter", ""%>
  <%#= f.label :season, Item.seasons_i18n[:winter] %>

  <div>
    <%= f.submit 'Create' %>
    <%= link_to "Back", request.referer %>
  </div>
<% end %>