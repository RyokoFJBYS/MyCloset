<div style="width: 100%; background: #fafafa;">
  <h2 class ="text-center pt-5" style="margin-top:100px; background: #fafafa;">Sign up</h2>
  
  <div class="mx-auto my-4" style="width:50%; background: #fafafa;">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field form-inline" style="border: none;border-bottom: 2px solid #e9e9e9;">
        <i class="fas fa-user"></i>
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, style: "border: none" %>
      </div>
    
      <div class="field form-inline" style="border: none;border-bottom: 2px solid #e9e9e9;">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "border: none" %>
      </div>
    
      <div class="field form-inline" style="border: none;border-bottom: 2px solid #e9e9e9;">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", style: "border: none" %>
      </div>
    
      <div class="field form-inline" style="border: none;border-bottom: 2px solid #e9e9e9;">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "border: none" %>
      </div>
    
      <div class="section1 text-center">
        <button type="submit" class="btn" style="background:#f16272; color:#fafafa;">
          Sign Up
        </button>
      </div>
    <% end %>
  </div>
  <p class ="text-center pb-5" style="background: #fafafa;">
    <%= link_to "Go to Sign in Page", new_user_session_path %>
  </p>
</div>