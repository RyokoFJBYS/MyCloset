<h1>User Edit</h1>

<%= form_with model:@user, url:user_path, local: true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Email</h4>
  <%= f.text_field :email %>
  <h4>Status</h4>
    <%= f.radio_button :status, :released, checked: "checked" %>
    <%= f.label :公開 %>
    <%= f.radio_button :status, :nonreleased %>
    <%= f.label :非公開 %>
  <div>
    <%= f.submit 'Update' %>
    <%= link_to "Delete", unsubscribe_user_path(@user), class: "btn btn-danger mx-5" %>
  </div>

<% end %>