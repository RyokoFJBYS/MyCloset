<h1>New Post</h1>

<%= form_with model: @post, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<h4>Image</h4>
<%= f.attachment_field :image %>
<h4>Tag</h4>

<div>
  <%= f.submit 'Updete' %>
  <%= link_to "Back", request.referer %>
  <%= link_to "Delete", post_path(@post), method: :delete %>
</div>
<% end %>
