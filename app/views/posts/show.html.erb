<h1 class ="my-3 text-center"><%= @post.title %></h1>

<div>
  <div>
    <%= attachment_image_tag @post, :image, :fill, 400, 300 %>
  </div>
  <div>
    <p>Date：<%= @post.start_time.strftime('%Y/%m/%d') %></p>
    <p>
      Memo<br><%= @post.body %>
    </p>
  </div>
</div>

<div style="display:flex;margin-bottom: 16px;">
  Tag：
  <ul style="list-style:none;display:flex;gap:8px;margin: 0;padding-left:8px;">
    <% @tags.each do |tag| %>
    <li><%= tag.name %></li>
    <% end %>
  </ul>
</div>

<% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> Favorite
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> Favorite
      <% end %>
    </p>
  <% end %>

<div>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Back", request.referer %>
</div>
