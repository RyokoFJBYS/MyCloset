<h1><%= @post.title %></h1>

<div>
  <div>
    <%= attachment_image_tag @post, :image, :fill, 400, 300 %>
  </div>
  <div>
    <p>Date：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
    <p>
      Memo<br><%= @post.body %>
    </p>
  </div>
</div>

<div>
  Tag：<%= @tags.name %>
</div>

<div>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Back", request.referer %>
</div>
