<h1>New Post</h1>

<%= form_with model: @post, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Date</h4>
<%= f.date_select(:start_time, default: Date.today, :use_month_numbers => true) %>
<h4>Body</h4>
<%= f.text_area :body %>
<h4>Image</h4>
<%= f.attachment_field :image %>
<h4>Tag</h4>
<%= f.text_field :tag_list, value: @post.tag_list.join(',') %>

<div>
  <%= f.submit 'Create' %>
  <%= link_to "Back", request.referer %>
</div>
<% end %>